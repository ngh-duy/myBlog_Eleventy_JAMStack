---
layout: base.njk
title: Tất cả bài viết
pagination:
  data: collections.post
  size: 1000
---

<div class="py-12 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
  <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white text-center mb-10">
    Recent Articles
  </h1>

  <ul role="list" class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
    {% for post in pagination.items %}
      <li>
        <article class="bg-white dark:bg-gray-900 rounded-lg shadow hover:shadow-lg transition overflow-hidden h-full flex flex-col">
          <img
            src="{{ post.data.image }}"
            alt="{{ post.data.imageAlt }}"
            class="w-full h-48 object-cover"
          />

          <div class="p-6 flex flex-col gap-4 flex-grow">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-white">
              <a href="{{ post.url }}" class="hover:text-blue-600 transition">
                {{ post.data.title }}
              </a>
            </h3>

            <p class="text-sm text-gray-500 dark:text-gray-400">
              by <span class="font-medium">{{ post.data.author }}</span> on
              <span>{{ post.date | date("MMM d, yyyy") }}</span>
            </p>

            <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-4">
              {{ post.data.description }}
            </p>

            <div class="mt-auto">
              <a
                href="{{ post.url }}"
                class="inline-block mt-4 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-full text-sm font-medium transition"
              >
                Continue Reading
              </a>
            </div>
          </div>
        </article>
      </li>
    {% endfor %}
  </ul>
</div>
