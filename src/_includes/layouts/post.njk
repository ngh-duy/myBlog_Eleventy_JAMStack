---
layout: base.njk
---

<article class="main-article py-12 font-roboto">
  <div class="container max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 space-y-8">
    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white leading-tight text-center">
      {{ title }}
    </h1>

    <figure class="w-full text-center">
      <img
        src="{{ image }}"
        alt="{{ imageAlt }}"
        class="mx-auto rounded-lg shadow-md max-h-[500px] object-cover w-full"
      />
      <figcaption class="mt-4 text-sm text-gray-500 dark:text-gray-400 italic">
        {{ imageAlt }}
      </figcaption>
    </figure>

    <!-- Nội dung chính của bài viết -->
    <div class="project-content prose prose-lg dark:prose-invert max-w-none mt-6 font-normal">
      {{ content | safe }}
    </div>
  </div>
</article>

